@{var classAtivo = "";}
@if (HttpContext.Current.User.Identity.IsAuthenticated && SoftFin.Web.Negocios.Acesso.EstabLogado2() != 0)
{
    <li class="sidebar-toggler-wrapper">
        <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
        <div class="sidebar-toggler">
        </div>
        <!-- END SIDEBAR TOGGLER BUTTON -->
    </li>
    <li class="sidebar-search-wrapper">
        <!-- BEGIN RESPONSIVE QUICK SEARCH FORM -->
        <!-- DOC: Apply "sidebar-search-bordered" class the below search form to have bordered search box -->
        <!-- DOC: Apply "sidebar-search-bordered sidebar-search-solid" class the below search form to have bordered & solid search box -->
        <form class="sidebar-search  " action="../../Pesquisar/Index" method="post">
            <a href="javascript:;" class="remove">
                <i class="icon-close"></i>
            </a>
            <div class="input-group">
                <input type="text" class="form-control" id="txtPesquisar" name="txtPesquisar" placeholder="Pesquisar...">
                <span class="input-group-btn">
                    <a href="javascript:;" class="btn submit">
                        <i class="icon-magnifier"></i>
                    </a>
                </span>
            </div>
        </form>
        <!-- END RESPONSIVE QUICK SEARCH FORM -->
    </li>
    <li>
        <a href="javascript:;">
            <i class="fa fa-star fa-fw"></i>
            <span class="title">Favoritos</span>
            <span class="selected"></span>
            <span class="arrow open"></span>
        </a>
        <ul class="sub-menu">
            @foreach (var itemMenu in SoftFin.Web.Negocios.Acesso.RetornaFavoritos())
            {

                <li>

                    <a href="../../../@itemMenu.NomeController/@itemMenu.NomeAction">
                        <i class="fa fa-star fa-fw"></i>
                        @itemMenu.Descricao
                    </a>
                </li>
            }
        </ul>
    </li>
    foreach (var item in SoftFin.Web.Negocios.Acesso.RetornaMenusPrincipais(SoftFin.Web.Negocios.Acesso.UsuarioLogado()).Where(p => p.Descricao != "Segurança"))
    {
        if (ViewBag.MigalhaA == item.Descricao)
        {
            classAtivo = "start active open;";
        }
        else
        {
            classAtivo = "";
        }
        <li class="@classAtivo">
            @{classAtivo = "";}
            <a href="javascript:;">
                <i class="fa fa-@item.icone fa-fw"></i>
                <span class="title">@item.Descricao</span>
                <span class="selected"></span>
                <span class="arrow open"></span>
            </a>
            <ul class="sub-menu">
                @foreach (var itemMenu in SoftFin.Web.Negocios.Acesso.RetornaMenuPorId(SoftFin.Web.Negocios.Acesso.UsuarioLogado(), item.id))
                {

                    <li>

                        <a href="../../../Dash/Index/@itemMenu.id" class="lksf">
                            <i class="fa fa-@itemMenu.icone fa-fw"></i>
                            @itemMenu.Descricao
                        </a>
                    </li>
                }
            </ul>
        </li>
    }

