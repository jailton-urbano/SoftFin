@{
    ViewBag.Title = "Alteração de Senha";
    ViewBag.Helplink = "";

}

<span></span>

<form name="form" method="post">


    <fieldset>
        <div class='container-fluid'>
            <div class="button-row form-group">
                <button class="btn btn-primary" type="submit">
                    <span class="glyphicon glyphicon-edit"></span> Alterar
                </button>
            </div>
            <div class="alert alert-info" id="msgAlerta">
                @ViewData["MsgErro"]
            </div>

            <div class="form-group">
                <div class='row'>
                    <div class='col-md-4 form-group'>
                        <label>Usuário</label> <br />
                        <span>@ViewData["Usuario"]</span>
                    </div>
                </div>

                <div class='row'>

                    <div class='col-md-4 form-group'>
                        <label>Senha Atual</label>
                        <input type='hidden' id='usuario' name='usuario' class='form-control' required value='@ViewData["Usuario"]' />
                        <input type='password' id='senhaAtual' name='senhaAtual' class='form-control' required value='' />
                    </div>
                    <div class='col-md-4 form-group'>
                        <label>Senha Nova</label>
                        <input type='password' id='senhaNova' name='senhaNova' class='form-control' required value='' />
                    </div>
                    <div class='col-md-4 form-group'>
                        <label>Senha Nova Confirmar</label>
                        <input type='password' id='senhaNovaConfirmacao' name='senhaNovaConfirmacao' class='form-control' required value='' />
                    </div>
                </div>


            </div>

            <div class="button-row form-group">
                <button class="btn btn-primary" type="submit">
                    <span class="glyphicon glyphicon-edit"></span> Alterar
                </button>
            </div>
            <div class="alert alert-info" id="msgAlerta">
                @ViewData["MsgErro"]
            </div>

        </div>


    </fieldset>
</form>



<script type="text/javascript">

    $(document).ready(function () {
        Metronic.init(); // init metronic core components
        Layout.init(); // init current layout
        QuickSidebar.init(); // init quick sidebar
        $("#msgAlerta").hide()


        $("form").submit(function (event) {
            $("#msgAlerta").show()
            //event.preventDefault();
        });

    });



</script>
