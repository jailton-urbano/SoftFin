@{
    ViewBag.Title = "Upload de Logo da Empresa";

}


@using (Html.BeginForm("Logo", "Estabelecimento", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @RenderPage("~/Views/Shared/_BotoesAlteracao.cshtml")
    
    
    if (ViewData["imagem"] == null)
    {
        <div class='container'>
            <input type="hidden" id="id" name="id" value="@ViewData["id"]" />
            <input type="hidden" id="logopadrao" name="logopadrao" value=""/>
            <div class='row'>
                <div class='span8'>
                    <label>Logo</label>
                    <input type="file" name="NomeArquivoAnexo" id="NomeArquivoAnexo"/>
                    <br />Somente(*.jpg,*.jpeg,*.png)Max(1-Mega)
                </div>
            </div>
        </div>
    }
    else
    {
        <div class='container'>
            <div class='row'>
                <div class='span8'>
                    <input type="hidden" id="id" name="id" value="@ViewData["id"]" />
                </div>
            </div>
            <div class='row'>
                <div class='span8'>
                    <label>Logo</label>
                    <img src='@ViewData["imagem"]' />
                    <input type="file" name="NomeArquivoAnexo" id="NomeArquivoAnexo"/>
                    <br />Somente(*.jpg,*.jpeg,*.png)Max(1-Mega)
                </div>
            </div>
            <div class='row'>
                <div class='span8'>
                    <label>Utilizar Logo SoftFin</label>
                    <input type="checkbox" id="logopadrao" name="logopadrao" />
                </div>
            </div>
        </div>
    }
    
    @RenderPage("~/Views/Shared/_BotoesAlteracao.cshtml")
}

<script>
    $(document).ready(function () {
        Metronic.init(); // init metronic core components
        Layout.init(); // init current layout
        QuickSidebar.init(); // init quick sidebar
    });
</script>
