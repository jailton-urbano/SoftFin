@model SoftFin.Web.Models.FGTS
@{
    ViewBag.Title = "FUNDO DE GARANTIA POR TEMPO DE SERVIÇO - FGTS - Alteração";
}


@using (Html.BeginForm())
{
     @Html.ValidationSummary(true)
    <fieldset>
        
        @RenderPage("~/Views/Shared/_BotoesAlteracao.cshtml")
        <br />
           <div class='container'>
            @Html.HiddenFor(x => x.ID)
      <div class='row'>
         <div class='col-md-3 form-group'>
            @Html.LabelFor(x => x.nomeContribuinte) 
            @Html.TextBoxFor(x => x.nomeContribuinte)
            @Html.ValidationMessageFor(x => x.nomeContribuinte)
        </div>
        <div class='col-md-3 form-group'>
            @Html.LabelFor(x => x.cnpj)  
            @Html.TextBoxFor(x => x.cnpj)
            @Html.ValidationMessageFor(x => x.cnpj)
        </div>
        <div class='col-md-3 form-group'>
            @Html.LabelFor(x => x.codigoReceita)  
            @Html.TextBoxFor(x => x.codigoReceita)
            @Html.ValidationMessageFor(x => x.codigoReceita)
        </div>

      </div>
      <div class='row'>
        <div class='col-md-3 form-group'>
            @Html.LabelFor(x => x.codigoBarras) 
            @Html.TextBoxFor(x => x.codigoBarras)
            @Html.ValidationMessageFor(x => x.codigoBarras)
        </div>
        <div class='col-md-3 form-group'>
            @Html.LabelFor(x => x.identificadorFgts)  
            @Html.TextBoxFor(x => x.identificadorFgts)
            @Html.ValidationMessageFor(x => x.identificadorFgts)
        </div>
        <div class='col-md-3 form-group'>
            @Html.LabelFor(x => x.lacreConectividadeSocial)  
            @Html.TextBoxFor(x => x.lacreConectividadeSocial)
            @Html.ValidationMessageFor(x => x.lacreConectividadeSocial)
        </div>
      </div>
      <div class='row'>
        <div class='col-md-3 form-group'>
            @Html.LabelFor(x => x.digitoLacre)  
            @Html.TextBoxFor(x => x.digitoLacre)
            @Html.ValidationMessageFor(x => x.digitoLacre)
        </div>

        <div class='col-md-3 form-group'>
            @Html.LabelFor(x => x.dataPagamento)  
            <input type='text' id='dataPagamento' name='dataPagamento' class='text-box single-line'  value='@Model.dataPagamento.Date.ToString("dd/MM/yyyy")' />
            @Html.ValidationMessageFor(x => x.dataPagamento)
        </div>
        <div class='col-md-3 form-group'>
            @Html.LabelFor(x => x.tipoInscricao) 
            @Html.TextBoxFor(x => x.tipoInscricao)
            @Html.ValidationMessageFor(x => x.tipoInscricao)
        </div>

      </div>
      <div class='row'>
        <div class='col-md-3 form-group'>
            @Html.LabelFor(x => x.valorPagamento)  
            @Html.TextBoxFor(x => x.valorPagamento)
            @Html.ValidationMessageFor(x => x.valorPagamento)
        </div>

      </div>
</div>
                @RenderPage("~/Views/Shared/_BotoesAlteracao.cshtml")
        <div class="alert alert-info">
            

            @ViewBag.msg
        </div>
    </fieldset>

}
<script>

    $(document).ready(function () {
        Metronic.init(); // init metronic core components
        Layout.init(); // init current layout
        QuickSidebar.init(); // init quick sidebar
    });

    $("#competencia").datepicker({ dateFormat: "mm/yy" });

    $('#valorTributo').attr('maxlength', '18');
    $('#valorTributo').keyup(
      function (event) {
          $('#valorTributo').val(filtraNumerosComVirgula($('#valorTributo').val()));
      });
    $('#valorTributo').blur(
      function (event) {
          formataValor(this, event);
      });
    $('#valorOutrasEntidades').attr('maxlength', '18');
    $('#valorOutrasEntidades').keyup(
      function (event) {
          $('#valorOutrasEntidades').val(filtraNumerosComVirgula($('#valorOutrasEntidades').val()));
      });
    $('#valorOutrasEntidades').blur(
      function (event) {
          formataValor(this, event);
      });
    $('#valorAtualizacaoMonetaria').attr('maxlength', '18');
    $('#valorAtualizacaoMonetaria').keyup(
      function (event) {
          $('#valorAtualizacaoMonetaria').val(filtraNumerosComVirgula($('#valorAtualizacaoMonetaria').val()));
      });
    $('#valorAtualizacaoMonetaria').blur(
      function (event) {
          formataValor(this, event);
      });
    $('#valorArrecadado').attr('maxlength', '18');
    $('#valorArrecadado').keyup(
      function (event) {
          $('#valorArrecadado').val(filtraNumerosComVirgula($('#valorArrecadado').val()));
      });
    $('#valorArrecadado').blur(
      function (event) {
          formataValor(this, event);
      });
    $('#dataArrecadacao').datepicker({ dateFormat: 'dd/mm/yy' });
</script>



<script>
    $('#cnpj').attr('maxlength', '18');
    $('#cnpj').attr('style', 'text-align:right');
    $('#cnpj').keydown(
      function (event) {
          formataCNPJ(this, event);
      });
    $('#dataPagamento').datepicker({ dateFormat: 'dd/mm/yy' });
    $('#valorPagamento').attr('maxlength', '18');
    $('#valorPagamento').keyup(
      function (event) {
          $('#valorPagamento').val(filtraNumerosComVirgula($('#valorPagamento').val()));
      });
    $('#valorPagamento').blur(
      function (event) {
          formataValor(this, event);
      });
</script>
