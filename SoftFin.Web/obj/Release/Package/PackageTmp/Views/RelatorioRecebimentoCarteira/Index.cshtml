<script src="~/Scripts/angular/angular.js"></script>
<script src="~/Scripts/angular/angular-i18n/1.2.5/angular-locale_pt-br.js"></script>
<script src="~/Scripts/bootstap/ui-bootstrap-tpls-0.13.0.js"></script>
<script src="~/Scripts/angular/mask/moment.js"></script>
<script src="~/Scripts/angular/mask/masks.js"></script>
<script src="~/Scripts/angular/utils/directives/pagination/dirPagination.js"></script>
<script src="~/Scripts/bootstap/bootstrap-datepicker.js"></script>
<script src="~/Scripts/jquery-ui-1.8.20.js"></script>
<script src="~/Scripts/Views/RelatorioRecebimentoCarteira/RelatorioRecebimentoCarteiraIndex.js"></script>

<div ng-app="SOFTFIN" id="DivTotal">
    <div ng-controller="MestreEntidade">
        <div class='row'>


            <div class='col-md-2 form-group'>
                <label>Mes</label>
                <select class="form-control" ng-model="filter.mes" ng-options="o.Value as o.Text for o in listMonth">
                    <option value="">--Selecione--</option>
                </select>
            </div>
            <div class='col-md-2 form-group'>
                <label>Ano</label>
                <select class="form-control" ng-model="filter.ano" ng-options="o.Value as o.Text for o in listYear">
                    <option value="">--Selecione--</option>
                </select>
            </div>
            <div class='col-md-2 form-group' ng-model="filter.excel">
                <label>Gerar Excel</label>
                <input type="checkbox" ng-model="filter.excel" ng-true-value="true" ng-false-value="false" />

            </div>
        </div>
        <div class="modal-footer">

            <button style="border-right-width: 1px; padding-right: 49px;"
                    ng-click="Search()"
                    title="Atualiza a lista na tela"
                    class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Pesquisar
            </button>

        </div>

        <div class='row'>
            <div class='col-md-3 form-group'>
                <label>Filtro : </label>
                <input  type="text" class="form-control" ng-model="locate" />
            </div>

        </div>
        <div class="row">
            <table  class="table table-striped table-bordered" style="overflow-x: scroll">
                <thead class="thead-dark">
                    <tr>
                        <th rowspan="2">
                            <span> Clientes </span>
                        </th>
                        <th rowspan="2">
                            <span> Tipo de Serviço </span>
                        </th>
                        <th colspan="2">
                            <span> Carteira </span>

                        </th>
                        <th colspan="3">
                            <span> Realizado </span>
                        </th>
                        <th rowspan="2">
                            <span> Valores em aberto </span>
                        </th>

                    </tr>
                    <tr>
                        <th >
                            <span> R$ </span>

                        </th>
                        <th>
                            <span> Vencimento </span>
                        </th>
                        <th>
                            <span> R$ </span>

                        </th>
                        <th>
                            <span> Data </span>
                        </th>
                        <th>
                            <span> Banco </span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in lista|filter:locate|orderBy:sortKey:reverse">

                        <td>
                            {{item.Cliente}}
                        </td>
                        <td>
                            {{item.TipoServico}}
                        </td>
                        <td style="text-align: right">
                            {{item.CarteiraValor |number:2}}
                        </td>
                        <td style="text-align: right">
                            {{item.CarteiraVencimento}}
                        </td>
                        <td style="text-align: right">
                            {{item.RealizadoValor |number:2}}
                        </td>
                        <td style="text-align: right">
                            {{item.RealizadoData | date:'dd/MM/yyyy'}}
                        </td>
                        <td >
                            {{item.RealizadoBanco}}
                        </td>
                        <td style="text-align: right">
                            {{item.ValoresAberto}}
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">Total</td>
                        <td style="text-align: right">{{sumCarteira |number:2}}</td>
                        <td></td>
                        <td style="text-align: right">{{sumRealizado |number:2}}</td>
                        <td></td>
                        <td></td>
                        <td style="text-align: right">{{sumValoresAberto |number:2}}</td>

                    </tr>

                </tbody>
            </table>

        </div>

    </div>
</div>


