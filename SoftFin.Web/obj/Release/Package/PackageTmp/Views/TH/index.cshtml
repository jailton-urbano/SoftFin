<script src="~/Scripts/angular/angular.js"></script>
<script src="~/Scripts/angular/angular-i18n/1.2.5/angular-locale_pt-br.js"></script>
<script src="~/Scripts/bootstap/ui-bootstrap-tpls-0.13.0.js"></script>
<script src="~/Scripts/angular/mask/moment.js"></script>
<script src="~/Scripts/angular/mask/masks.js"></script>
<script src="~/Scripts/angular/utils/directives/pagination/dirPagination.js"></script>
<script src="~/Scripts/bootstap/bootstrap-datepicker.js"></script>
<script src="~/Scripts/jquery-ui-1.8.20.js"></script>
<script src="~/Scripts/Views/TH/THindex.js"></script>

<div ng-app="SOFTFIN" id="DivTotal">
    <div ng-controller="MestreEntidade">


        <script type="text/ng-template" id="modalExcluir.html">
            <div>
                <div class="modal-header">
                    <h3>Excluir Taxa Hora?</h3>
                </div>
                <div class="modal-body">
                    <div class='container'>
                        <div class='row'>
                            <div class='col-md-12 form-group'>
                                <label>{{entidade.id}} - {{entidade.descricao}} - {{entidade.categoria_descricao'}} - {{entidade.dataValidade}}</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="alert alert-danger" ng-show="showNOK">
                        {{msgNOK}}
                        <ul>
                            <li ng-repeat="item in Erros">{{item}}</li>
                        </ul>
                    </div>
                    <button class="btn btn-primary" ng-click="OK()">
                        <span class="glyphicon glyphicon-ok"></span>
                        OK
                    </button>
                    <button class="btn btn-default" ng-click="Cancel()">
                        <span class="glyphicon glyphicon-log-out"></span>
                        Voltar
                    </button>
                </div>
            </div>
        </script>

        <script type="text/ng-template" id="modalSalvar.html">
            <div>
                <div class="modal-header">
                    <h3>Salvar o banco movimento?</h3>
                </div>
                <div class="modal-body">
                    <div class='container'>
                        <div class='row'>
                            <div class='col-md-12 form-group'>
                                <label>{{mensagem}}</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="alert alert-danger" ng-show="showNOK">
                        {{msgNOK}}
                        <ul>
                            <li ng-repeat="item in Erros">{{item}}</li>
                        </ul>
                    </div>
                    <button class="btn btn-primary" ng-click="OK()">
                        <span class="glyphicon glyphicon-ok"></span>
                        OK
                    </button>
                    <button class="btn btn-default" ng-click="cancel()">
                        <span class="glyphicon glyphicon-log-out"></span>
                        Voltar
                    </button>
                </div>
            </div>
        </script>


        <div id="Grid" ng-show="showGrid">

           

            <div class='panel-body'>
                <form class="form-search">


                    <div class='col-md-3 form-group'>
                        <label>Pesquisa : </label>
                        <input type="text" class="form-control" ng-model="locate" />
                    </div>


                </form>
            </div>

            <dir-pagination-controls max-size="10" boundary-links="true"></dir-pagination-controls>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>


                            <button style="border-right-width: 0px; padding-right: 49px;"
                                    ng-click="Search()" 
                                    title="Atualiza a lista na tela"
                                    class="btn btn-warning">
                                <span class="glyphicon glyphicon-refresh"></span> Atualizar
                            </button>

                            <button style="margin-top: 4px; padding-right: 72px;"
                                    ng-click="New()"
                                    title="Novo registro"
                                    class="btn btn-primary">
                                <span class="glyphicon glyphicon-plus"></span> Novo
                            </button>



                        </th>
                        <th>

                        </th>

                    </tr>
                </thead>
                <tbody>
                    <tr dir-paginate="item in listProjetoAtividades|orderBy:sortKey:reverse|filter:locate|itemsPerPage:7">
                        <td style="width: 40px;">



                            <button style="margin-top: 4px; border-right-width: 0px; padding-right: 50px;"
                                    ng-click="Detail(item)"
                                    title="Detalha o lançamento da lista"
                                    class="btn btn-primary">
                                <span class="glyphicon glyphicon-list-alt"></span> Detalhar
                            </button>


                            <button style="margin-top: 4px; border-right-width: 0px; padding-right: 68px;"
                                    ng-click="Edit(item)"
                                    title="Edita o lançamento"
                                    class="btn btn-primary">
                                <span class="glyphicon glyphicon-edit"></span> Editar
                            </button>

                            <button style="margin-top: 4px;border-right-width: 0px; padding-right: 63px;"
                                    type="button"
                                    ng-click="Delete(item)"
                                    title="Remove o lançamento"
                                    class="btn btn-danger">
                                <span class="glyphicon glyphicon-remove"></span> Excluir
                            </button>

                        </td>

                        <td>
                            <b>
                                <span ng-click="Order('categoria_descricao')" style="cursor:pointer">Categoria Descrição </span>:
                                <label> {{item.categoria_descricao}}</label><br />
                                <span ng-click="Order('descricao')" style="cursor:pointer"> Descrição </span>:
                                <label> {{item.descricao}}</label><br />
                                <span ng-click="Order('dataValidade')" style="cursor:pointer"> Data de Validade </span>:
                                <label> {{item.dataValidade | date:'dd/MM/yyyy'}}</label>
                                <br />
                                <span ng-click="Order('taxaHoraCusto')" style="cursor:pointer"> Taxa Hora Custo</span>:
                                <label> {{item.taxaHoraCusto}}</label>
                                <br />
                                <span ng-click="Order('taxaHoraVenda')" style="cursor:pointer"> Taxa Hora Venda</span>:
                                <label> {{item.taxaHoraVenda}}</label>
                                <br />


                            </b>



                        </td>
                    </tr>
                </tbody>
            </table>
            <dir-pagination-controls max-size="10" boundary-links="true"></dir-pagination-controls>
            @*/ {{item.valor | number:2}}*@

            <div class="alert alert-info" ng-show="msgOK != ''">
                {{msgOK}}
            </div>

            <div class="alert alert-danger" ng-show="msgNOK != ''">
                {{msgNOK}}
                <ul>
                    <li ng-repeat="item in errors">{{item}}</li>
                </ul>
            </div>

        </div>

        <div class="container-fluid" ng-show="showManut">


            <div class="alert alert-info" ng-show="msgOK != ''">
                {{msgOK}}
            </div>
            <div class="alert alert-danger" ng-show="msgNOK != ''">
                {{msgNOK}}
                <ul>
                    <li ng-repeat="item in errors">{{item}}</li>
                </ul>
            </div>

            <div>
                <div class='row'>
                    <div class='col-md-9 form-group'>
                    </div>
                    <div class='col-md-3 form-group'>
                        <span class="input-group-btn">
                            <button type="button"
                                    ng-click="Save()"
                                    class="btn btn-primary"
                                    ng-show="!modeDetail">
                                <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
                            </button>
                        </span>
                        <span class="input-group-btn">
                            <button type="button"
                                    ng-click="Back()"
                                    class="btn btn-default">
                                <span class="glyphicon glyphicon-log-out"></span> Voltar
                            </button>
                        </span>
                    </div>
                </div>

                <div class='row'>

                    <div class='col-md-4 form-group'>
                        <label>Categoria</label>
                        <select ng-disabled="modeDetail" class="form-control" ng-model="entidade.categoria_id" ng-options="o.Value as o.Text for o in listCategorias">
                            <option value="">--Selecione--</option>
                        </select>
                    </div>
                    <div class='col-md-4 form-group'>
                        <label>Descrição</label>
                        <input ng-disabled="modeDetail" type="text" ng-model="entidade.descricao" class="form-control" ng-maxlength="50" />
                    </div>

                    <div class='col-md-2 form-group' datetimez ng-model="entidade.data" ng-disabled="ModoConsulta">

                        <label>Data</label>

                        <span class="add-on">

                            <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>

                        </span>
                        <input ng-disabled="modeDetail" data-format="dd/MM/yyyy" type="text" class="form-control" ng-model="entidade.dataValidade" required ui-date-mask />



                    </div>

                    <div class='col-md-4 form-group'>
                        <label>Taxa Hora Custo</label>
                        <input ng-disabled="modeDetail" ng-model="entidade.taxaHoraCusto" class="form-control" ng-maxlength="21" ui-number-mask="2" />
                    </div>

                    <div class='col-md-4 form-group'>
                        <label>Taxa Hora Venda</label>
                        <input ng-disabled="modeDetail" ng-model="entidade.taxaHoraVenda" class="form-control" ng-maxlength="21" ui-number-mask="2" />
                    </div>

                </div>



                <div class='row'>
                    <div class='col-md-9 form-group'>
                    </div>
                    <div class='col-md-3 form-group'>
                        <span class="input-group-btn">
                            <button type="button"
                                    ng-click="Save()"
                                    class="btn btn-primary"
                                    ng-show="!modeDetail">
                                <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
                            </button>
                        </span>
                        <span class="input-group-btn">
                            <button type="button"
                                    ng-click="Back()"
                                    class="btn btn-default">
                                <span class="glyphicon glyphicon-log-out"></span> Voltar
                            </button>
                        </span>
                    </div>
                </div>
            </div>


            <div class="alert alert-info" ng-show="msgOK != ''">
                {{msgOK}}
            </div>

            <div class="alert alert-danger" ng-show="msgNOK != ''">
                {{msgNOK}}
                <ul>
                    <li ng-repeat="item in errors">{{item}}</li>
                </ul>
            </div>

        </div>


    </div>
</div>


