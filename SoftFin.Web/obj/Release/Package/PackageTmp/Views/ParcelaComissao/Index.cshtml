@model IEnumerable<SoftFin.Web.Models.ParcelaComissao>
@{
    ViewBag.Title = "Lista Parcela Comissão"; 

}

<table id="jqgObj" cellpadding="0" cellspacing="0"></table>
<div   id="jqgObjOpc" style="text-align:center;"></div>

<script type="text/javascript">
    $(document).ready(function () {

        Metronic.init(); // init metronic core components
        Layout.init(); // init current layout
        QuickSidebar.init(); // init quick sidebar
        $('#jqgObj').jqGrid({
            //url from wich data should be requested
            url: '@Url.Action("Listas")',
            //type of data
            datatype: 'json',
            //url access method type
            mtype: 'POST',
            //columns namesa
            colNames: ['ID','EN1', 'EN2', 'EN3', 'Seguradora','Familia', 'Produto','Tipo','Extrato','Data Extrato','Data Crédito','Parcela','Comissão Bruta'],
            //columns model
            colModel: [
                        { name: 'txtCodigo', index: 'ID', align: 'left', editable: false, width: '60', hidden: true },
                        { name: 'txtEN1', index: 'EN1', align: 'left', editable: false, width: '60', hidden: false },
                        { name: 'txtEN2', index: 'EN2', align: 'left', editable: false, width: '60', hidden: false },
                        { name: 'txtEN3', index: 'EN3', align: 'left', editable: false, width: '50', hidden: false },
                        { name: 'txtSeguradora', index: 'Seguradora', align: 'left', editable: false, width: '70', hidden: false },
                        { name: 'txtFamilia', index: 'Familia', align: 'left', editable: false, width: '100', hidden: false },
                        { name: 'txtProduto', index: 'Produto', align: 'left', editable: false, width: '100', hidden: false },
                        { name: 'txtTipo', index: 'Tipo', align: 'left', editable: false, width: '80', hidden: false },
                        { name: 'txtExtrato', index: 'Extrato', align: 'left', editable: false, width: '100', hidden: false },
                        { name: 'txtDataExtrato', index: 'DataExtrato', align: 'left', editable: false, width: '80', hidden: false },
                        { name: 'txtDataCredito', index: 'DataCredito', align: 'left', editable: false, width: '80', hidden: false },
                        { name: 'txtParcela', index: 'Parcela', align: 'left', editable: false, width: '30', hidden: false },
                        { name: 'txtComissaoBruta', index: 'ComissaoBruta', align: 'right', editable: false, width: '60', hidden: false }

            ],
            //pager for grid
            pager: $('#jqgObjOpc'),
            //number of rows per page
            rowNum: 12,
            //initial sorting column
            sortname: 'Tipo',
            //initial sorting direction
            sortorder: 'asc',
            viewrecords: true,
            //grid height
            height: '100%'

        });

        $('#jqgObj').jqGrid('navGrid', '#jqgObjOpc',
            { add: false, del: false, edit: false, search: false });


    });

    </script>


