@model SoftFin.Web.Models.AtendimentoHistorico
@{
    ViewBag.Title = "Atendimento Historico - Novo";

}


@using (Html.BeginForm("Historico", "Atendimento", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        
        @RenderPage("~/Views/Shared/_BotoesInclusao.cshtml")
        <br />
            <div class='container'>
                @Html.HiddenFor(x => x.id)
                @Html.HiddenFor(x => x.usuario)
                @Html.HiddenFor(x => x.estabelecimento_id)
                @Html.HiddenFor(x => x.atendimento_id)

                <div class='row'>

                    <div class='col-md-3 form-group'>
                        @Html.LabelFor(x => x.atendimentotipohistorico_id)
                    
                        @Html.DropDownListFor(model => model.atendimentotipohistorico_id, (SelectList)ViewData["atendimentohistorico"], "---Selecione---")
                        @Html.ValidationMessageFor(x => x.atendimentotipohistorico_id)
                    </div>
                    <div class='col-md-3 form-group'>
                        @Html.LabelFor(x => x.usuario)
                        <input type='text' id='usuario' name='usuario' class='text-box single-line'  value='@Model.usuario' readonly="readonly" />
                    </div>
                    <div class='col-md-3 form-group'>
                        @Html.LabelFor(x => x.data)
                    
                        <input type='text' id='data' name='data' class='text-box single-line'  value='@Model.data.ToString()' readonly="readonly" />
                        @Html.ValidationMessageFor(x => x.data)
                    </div>
                </div>

                <div class='row'>
                    <div class='col-md-3 form-group'>
                        @Html.LabelFor(x => x.descricao)
                        <br />
                        @Html.TextAreaFor(x => x.descricao)
                        @Html.ValidationMessageFor(x => x.descricao)
                    </div>
                </div>
                <div class='row'>
                    <div class='span8'>
                        @Html.LabelFor(x => x.NomeArquivoAnexo) 
                        <input type="file" name="NomeArquivoAnexo" id="NomeArquivoAnexo"/>
                        <br />Somente(*.jpg,*.jpeg,*.xls,*.xlsx,*.doc,*.docx,*.rar,*.zip;*.pdf;*.txt)Max(3-Mega)
                        @Html.ValidationMessageFor(x => x.NomeArquivoAnexo)
                    </div>
                </div>
            </div>
        <br />
        @RenderPage("~/Views/Shared/_BotoesInclusao.cshtml")
    </fieldset>
}

<div class="alert alert-info">
    @ViewBag.msg
</div>

<script>
    $(document).ready(function () {
        Metronic.init(); // init metronic core components
        Layout.init(); // init current layout
        QuickSidebar.init(); // init quick sidebar
    });
